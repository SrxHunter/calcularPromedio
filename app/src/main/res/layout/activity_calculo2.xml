<?xml version="1.0" encoding="utf-8"?>




<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:layout_margin="@android:dimen/app_icon_size">



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"

        >

        <TextView
            android:id="@+id/titulo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:gravity="center"
            android:text="Evaluaciones Solemnes"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/eprtext"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="EPR1"
            android:textSize="18sp"
            tools:text="EPR1 (10%)"
            android:translationY="-20dp"/>

        <EditText
            android:id="@+id/epr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:translationY="-25dp"/>


        <TextView
            android:id="@+id/epetext"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="EPE1"
            android:textSize="18sp"
            tools:text="EPE1 (15%)"
            android:translationY="-20dp"/>

        <EditText
            android:id="@+id/epe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:translationY="-25dp"/>


        <TextView
            android:id="@+id/epr2text"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="EPR2"
            android:textSize="18sp"
            tools:text="EPR2 (20%)"
            android:translationY="-20dp"/>

        <EditText
            android:id="@+id/epr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:translationY="-25dp"/>

        <TextView
            android:id="@+id/epe2text"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="EPE2"
            android:textSize="18sp"
            tools:text="EPE2 (25%)"
            android:translationY="-20dp"/>

        <EditText
            android:id="@+id/epe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:translationY="-25dp"
            />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:gravity="center"
            android:text="Evaluaciones Acumulativas"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/eva1text"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="EVA 1"
            android:textSize="18sp"
            tools:text="EVA 1"
            android:translationY="-20dp"/>

        <EditText
            android:id="@+id/eva1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:translationY="-25dp"/>


        <TextView
            android:id="@+id/eva2text"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="EVA 2"
            android:textSize="18sp"
            tools:text="EVA 2"
            android:translationY="-20dp"/>

        <EditText
            android:id="@+id/eva2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:translationY="-25dp"/>


        <TextView
            android:id="@+id/eva3text"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="EVA 3"
            android:textSize="18sp"
            tools:text="EVA 3"
            android:translationY="-20dp"/>

        <EditText
            android:id="@+id/eva3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:translationY="-25dp"/>

        <TextView
            android:id="@+id/eva4text"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="EVA 4"
            android:textSize="18sp"
            tools:text="EVA 4"
            android:translationY="-20dp" />

        <EditText
            android:id="@+id/eva4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:translationY="-25dp"/>

        <TextView
            android:id="@+id/examentext"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Nota de Examen (30%)"
            android:textSize="18sp"
            tools:text="Nota de Examen (30%)"
            android:translationY="-20dp" />

        <EditText
            android:id="@+id/examen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:translationY="-25dp"/>




        <TextView
            android:id="@+id/salto2text"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text=""
            android:textSize="18sp"
            tools:text="" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center">

            <Button
                android:id="@+id/calcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="CalcularPromedio"
                android:text="Calcular"
                />

            <Button
                android:id="@+id/limpiar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="Limpiar"
                android:text="Limpiar"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/saltotext"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text=""
            android:textSize="18sp"
            tools:text="" />

        <TextView
            android:id="@+id/promedioText"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Promedio"
            android:textSize="18sp"
            tools:text="Promedio"
            android:translationY="-30dp"/>

        <EditText
            android:id="@+id/promedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:translationY="-25dp"/>

        <TextView
            android:id="@+id/mensajeEximido"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:textColor="@android:color/holo_green_dark"
  />

        <TextView
            android:id="@+id/mensajeEximido2"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:translationY="-40dp" />




    </LinearLayout>

</ScrollView>



